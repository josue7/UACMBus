<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/act_comentar"
    android:background="@drawable/fondo_amarillo"
    tools:context=".Comentario">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="10dp">

    <android.support.v7.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:layout_editor_absoluteX="8dp"
        tools:layout_editor_absoluteY="13dp">



        <android.support.v7.widget.CardView xmlns:card_view="http://schemas.android.com/apk/res-auto"
            android:layout_width="wrap_content"
            android:layout_margin="10dp"
            android:layout_height="380dp"
            android:layout_gravity="center"
            android:elevation="2dp"
            card_view:cardCornerRadius="4dp"
            tools:layout_editor_absoluteX="20dp"
            tools:layout_editor_absoluteY="10dp"
            android:layout_centerHorizontal="true">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/textView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:paddingHorizontal="20dp"
                    android:padding="10dp"
                    android:text="Agrega tu Cometario"
                    android:textColor="#97812D"
                    android:textSize="24sp"
                    app:fontFamily="monospace"
                    tools:layout_editor_absoluteX="68dp"
                    tools:layout_editor_absoluteY="66dp" />

                <EditText
                    android:id="@+id/text_nombre"
                    android:layout_width="250dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="15dp"
                    android:ems="10"
                    android:gravity="start|top"
                    android:hint="Nombre o alias(opcional)"
                    android:inputType="textPersonName"
                    android:text=""
                    tools:layout_editor_absoluteX="99dp"
                    tools:layout_editor_absoluteY="211dp" />

                <EditText
                    android:id="@+id/text_comentarios"
                    android:layout_width="250dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:ems="10"
                    android:gravity="start|top"
                    android:hint="Agrega tu comentario o sugerencia"
                    android:inputType="textMultiLine"
                    tools:layout_editor_absoluteX="98dp"
                    tools:layout_editor_absoluteY="306dp" />

                <android.support.v7.widget.CardView
                    android:id="@+id/cardView"
                    android:layout_width="200dp"
                    android:layout_height="50dp"
                    android:layout_above="@+id/editText2"
                    android:layout_centerHorizontal="true"
                    android:layout_gravity="center"
                    android:layout_margin="80dp"
                    android:layout_marginBottom="31dp"
                    android:onClick="enviar"
                    app:cardBackgroundColor="@color/colorAccent"
                    app:cardCornerRadius="25dp"
                    app:cardElevation="10dp">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <TextView
                            android:id="@+id/enviar"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerInParent="true"
                            android:text="enviar"
                            android:textColor="#fff"
                            android:textSize="16sp" />
                    </RelativeLayout>
                </android.support.v7.widget.CardView>

            </LinearLayout>


        </android.support.v7.widget.CardView>



    </android.support.v7.widget.LinearLayoutCompat>

    </ScrollView>

    <android.support.constraint.Guideline
        android:id="@+id/guideline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_begin="20dp" />

    <android.support.constraint.Guideline
        android:id="@+id/guideline2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_end="690dp" />


</android.support.constraint.ConstraintLayout>